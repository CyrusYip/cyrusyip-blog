{
  "name": "cyrusyip-blog",
  "scripts": {
    "build": "hugo --minify --gc",
    "clean": "rm --recursive public/",
    "clean:server:shared": "npm run clean; npm run server:shared",
    "server": "hugo server --navigateToChanged",
    "server:shared": "hugo server --navigateToChanged --bind 0.0.0.0"
  },
  "devDependencies": {
    "hugo-bin": "^0.137.0"
  }
}
